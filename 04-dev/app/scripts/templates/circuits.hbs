<h2>Circuits</h2>
<table class="table table-hover table-condensed table-responsive">
  <thead>
  <th>Circuit</th>
  <th>Locality</th>
  <th>Country</th>
  <th>Information</th>
  </thead>
  <tbody>
  {{#each circuits}}
    <tr>
      <td><a href="/circuits/{{circuitId}}">{{circuitName}}</a></td>
      <td>{{Location.locality}}</td>
      <td>{{Location.country}}</td>
      <td>
        <a href="{{url}}" rel="external" target="_blank">
          <span class="glyphicon glyphicon-new-window" aria-hidden="true"> more</span>     
        </a>
      </td>
    </tr>
  {{/each}}
  </tbody>
  </ul>
</table>
<nav>
  <ul class="pagination">
    {{#if prev}}
      <li>
        <a href="?page={{prev}}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {{else}}
      <li class="disabled">
        <a href="#" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {{/if}}
    {{#times count=total start=1}}
      {{#eq current @index}}
        <li class="active"><a href="#">{{@index}}</a></li>
      {{else}}
        <li><a href="?page={{@index}}">{{@index}}</a></li>
      {{/eq}}
    {{/times}}
    {{#if next}}
      <li>
        <a href="?page={{next}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{else}}
      <li class="disabled">
        <a href="#" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{/if}}
  </ul>
</nav>

